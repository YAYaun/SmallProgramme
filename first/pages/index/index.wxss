.container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 50rpx;
}
image{
  width:300rpx;
  border-radius: 50%;
}
text{
  font-size: 50rpx;
  margin: 20rpx 0;
}
input{
  border: 1px solid #ccc;
  padding: 20rpx;
  border-radius: 10rpx;
  width: 80%;
  text-align: center;
}
button{
  margin: 20rpx 0;
}
